<UserControl x:Class="MusicCenterWPF.Windows.Shared.CollapseAndClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicCenterWPF.Windows.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource StyledButton}" Content="X" Click="Close_Click" Grid.Column="0" Width="30" Height="30"/>
        <Button Style="{StaticResource StyledButton}" Content="-" Click="Minimize_Click" Grid.Column="1" Width="30" Height="30"/>
    </Grid>

</UserControl>
