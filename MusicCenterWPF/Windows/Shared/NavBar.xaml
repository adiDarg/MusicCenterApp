<UserControl x:Class="MusicCenterWPF.Windows.Shared.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicCenterWPF.Windows.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="74" VerticalAlignment="Top" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="ScheduleButton" Style="{StaticResource StyledButton}" Width="135px" Grid.Column="0" Click="ScheduleButton_Click">
            Schedule
        </Button>
        <Button Name="MessagesButton" Style="{StaticResource StyledButton}" Width="135px" Grid.Column="1" Click="MessagesButton_Click">
            Messages
        </Button>
        <Button Name="ViewRequestsButton"  Style="{StaticResource StyledButton}" Width="135px" Grid.Column="2" Click="ViewRequestsButton_Click">
            View Requests
        </Button>
        <Button Name="SendRequestsButton" Style="{StaticResource StyledButton}" Width="135px" Grid.Column="3" Click="SendRequestsButton_Click">
            Send Requests
        </Button>
        <Button Name="AdditionalActionsButton" Style="{StaticResource StyledButton}" Width="135px" Grid.Column="4" Click="AdditionalActionsButton_Click">
            More
        </Button>
        <Button Name="ViewProfileButton" Style="{StaticResource StyledButton}" Width="135px" Grid.Column="5" Click="ViewProfileButton_Click">
            View Profile
        </Button>
    </Grid>
</UserControl>
