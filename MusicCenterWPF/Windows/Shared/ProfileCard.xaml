<UserControl x:Class="MusicCenterWPF.Windows.Shared.ProfileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicCenterWPF.Windows.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ellipse Style="{StaticResource StyledImageBorder}"
                 Stroke="Black"
                 StrokeThickness="3"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="10">
            <Ellipse.Fill>
                <ImageBrush x:Name="image"/>
            </Ellipse.Fill>
        </Ellipse>
        <Label Style="{StaticResource StyledLabel}"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               FontSize="35"
               Margin="0,25,0,0"
               Content="{Binding Name, StringFormat=Username: {0}}"/>
        <Label Style="{StaticResource StyledLabel}"
               HorizontalAlignment="Left"
               FontSize="30"
               Grid.Row="2"
               Content="{Binding Email, StringFormat=Email: {0}}"/>
        <Label Style="{StaticResource StyledLabel}"
               HorizontalAlignment="Left"
               FontSize="30"
               Grid.Row="3"
               Content="{Binding PhoneNumber, StringFormat=Phone Number: {0}}"/>
        <Label Style="{StaticResource StyledLabel}"
               HorizontalAlignment="Left"
               FontSize="30"
               Grid.Row="4"
               Content="{Binding Address, StringFormat=Address: {0}}"/>
    </Grid>
</UserControl>
